{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true, 
        "experimentalDecorators": true, 
        "outDir": "./dist"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}